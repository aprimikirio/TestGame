<Window x:Class="TestGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="640" ResizeMode="NoResize"
        KeyDown="MainCanvas_KeyDown">

    <Grid>
        <Grid>
            <Canvas Name="MainCanvas" Background="Lavender">
                <TextBlock Name="txtbx" TextAlignment="Right" Height="451" Canvas.Left="482" TextWrapping="Wrap" Width="142" Background="{x:Null}"/>
            </Canvas>
        </Grid>
    </Grid>
</Window>
